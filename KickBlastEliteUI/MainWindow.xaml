<Window x:Class="KickBlastEliteUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:KickBlastEliteUI.Views"
        xmlns:vm="clr-namespace:KickBlastEliteUI.ViewModels"
        mc:Ignorable="d"
        Title="KickBlast Judo - Training Fee Management" Height="860" Width="1400" Background="{StaticResource PageBrush}">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AthletesViewModel}">
            <views:AthletesView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CalculatorViewModel}">
            <views:CalculatorView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:HistoryViewModel}">
            <views:HistoryView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#0F172A" Padding="18">
            <StackPanel>
                <TextBlock Text="KickBlast Elite" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0,5,0,20"/>
                <Button Content="Dashboard" Command="{Binding NavigateDashboardCommand}" />
                <Button Content="Athletes" Command="{Binding NavigateAthletesCommand}" />
                <Button Content="Calculator" Command="{Binding NavigateCalculatorCommand}" />
                <Button Content="History" Command="{Binding NavigateHistoryCommand}" />
                <Button Content="Settings" Command="{Binding NavigateSettingsCommand}" />
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="38"/>
            </Grid.RowDefinitions>

            <Border Background="White" Margin="10,10,10,0" CornerRadius="14" Padding="18,8" Style="{StaticResource CardStyle}">
                <DockPanel>
                    <TextBlock Text="KickBlast Judo â€“ Training Fee Management System" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding CurrentDate, StringFormat='{}{0:dddd, dd MMM yyyy}'}" HorizontalAlignment="Right" DockPanel.Dock="Right" VerticalAlignment="Center" FontWeight="Medium"/>
                </DockPanel>
            </Border>

            <Border Grid.Row="1" Margin="10" Style="{StaticResource CardStyle}">
                <ContentControl Content="{Binding CurrentViewModel}">
                    <ContentControl.Resources>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="Opacity" Value="0"/>
                            <Style.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.25"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Resources>
                </ContentControl>
            </Border>

            <Border Grid.Row="2" Margin="12,0,12,8" CornerRadius="8" Padding="10,4" Background="#E2E8F0">
                <TextBlock Text="{Binding Notification.Message}" Foreground="Black"/>
            </Border>
        </Grid>
    </Grid>
</Window>
