<UserControl x:Class="KickBlastStudentUI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border Style="{StaticResource CardStyle}" Width="420" HorizontalAlignment="Left">
        <StackPanel>
            <TextBlock Text="Pricing Settings (LKR)" Style="{StaticResource CardTitleStyle}"/>
            <TextBlock Text="Beginner Weekly Fee"/><TextBox Text="{Binding BeginnerWeeklyFee}" />
            <TextBlock Text="Intermediate Weekly Fee" Margin="0,8,0,0"/><TextBox Text="{Binding IntermediateWeeklyFee}" />
            <TextBlock Text="Elite Weekly Fee" Margin="0,8,0,0"/><TextBox Text="{Binding EliteWeeklyFee}" />
            <TextBlock Text="Competition Fee" Margin="0,8,0,0"/><TextBox Text="{Binding CompetitionFee}" />
            <TextBlock Text="Coaching Hourly Rate" Margin="0,8,0,0"/><TextBox Text="{Binding CoachingHourlyRate}" />
            <Button Content="Save Settings" Margin="0,14,0,0" Command="{Binding SaveSettingsCommand}" Width="140"/>
        </StackPanel>
    </Border>
</UserControl>
