<UserControl x:Class="KickBlastStudentUI.Views.AthletesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource CardStyle}">
            <StackPanel>
                <TextBlock Text="Athlete Form" Style="{StaticResource CardTitleStyle}"/>
                <TextBlock Text="Name"/><TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="{Binding NameError}" Foreground="Red" FontSize="12" Margin="0,2,0,8"/>
                <TextBlock Text="Plan"/>
                <ComboBox ItemsSource="{Binding Plans}" SelectedItem="{Binding SelectedPlan}" DisplayMemberPath="Name" />
                <TextBlock Text="Current Weight (kg)" Margin="0,8,0,0"/><TextBox Text="{Binding CurrentWeight}"/>
                <TextBlock Text="Category Weight (kg)" Margin="0,8,0,0"/><TextBox Text="{Binding CategoryWeight}"/>
                <TextBlock Text="{Binding WeightError}" Foreground="Red" FontSize="12" Margin="0,2,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                    <Button Content="Save" Command="{Binding SaveAthleteCommand}" Margin="0,0,8,0"/>
                    <Button Content="Delete" Command="{Binding DeleteAthleteCommand}" Margin="0,0,8,0"/>
                    <Button Content="Clear" Command="{Binding ClearFormCommand}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Column="2" Style="{StaticResource CardStyle}">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBox Width="200" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,8,0" />
                    <ComboBox Width="150" ItemsSource="{Binding Plans}" SelectedValuePath="Id" SelectedValue="{Binding SelectedPlanFilter}" DisplayMemberPath="Name" Margin="0,0,8,0" />
                    <Button Content="Search" Command="{Binding SearchCommand}" />
                </StackPanel>

                <DataGrid ItemsSource="{Binding Athletes}" SelectedItem="{Binding SelectedAthlete}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Plan" Binding="{Binding TrainingPlan.Name}" Width="*"/>
                        <DataGridTextColumn Header="Current" Binding="{Binding CurrentWeight}" Width="90"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding CategoryWeight}" Width="90"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
