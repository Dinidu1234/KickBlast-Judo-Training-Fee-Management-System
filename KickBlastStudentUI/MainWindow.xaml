<Window x:Class="KickBlastStudentUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:KickBlastStudentUI.ViewModels"
        xmlns:views="clr-namespace:KickBlastStudentUI.Views"
        mc:Ignorable="d"
        Title="KickBlast Judo - Training Fee Management" Height="760" Width="1240" Background="{StaticResource AppBackgroundBrush}">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}"><views:DashboardView /></DataTemplate>
        <DataTemplate DataType="{x:Type vm:AthletesViewModel}"><views:AthletesView /></DataTemplate>
        <DataTemplate DataType="{x:Type vm:CalculatorViewModel}"><views:CalculatorView /></DataTemplate>
        <DataTemplate DataType="{x:Type vm:HistoryViewModel}"><views:HistoryView /></DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}"><views:SettingsView /></DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Background="White" Margin="12" CornerRadius="12">
            <StackPanel Margin="16">
                <TextBlock Text="KickBlast Judo" FontSize="24" FontWeight="Bold" Foreground="{StaticResource PrimaryBrush}" Margin="0,8,0,24"/>
                <Button Style="{StaticResource SidebarButtonStyle}" Content="Dashboard" Command="{Binding NavigateDashboardCommand}" />
                <Button Style="{StaticResource SidebarButtonStyle}" Content="Athletes" Command="{Binding NavigateAthletesCommand}" />
                <Button Style="{StaticResource SidebarButtonStyle}" Content="Calculator" Command="{Binding NavigateCalculatorCommand}" />
                <Button Style="{StaticResource SidebarButtonStyle}" Content="History" Command="{Binding NavigateHistoryCommand}" />
                <Button Style="{StaticResource SidebarButtonStyle}" Content="Settings" Command="{Binding NavigateSettingsCommand}" />
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="12,12,12,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border Style="{StaticResource CardStyle}" Padding="16" Margin="0,0,0,12">
                <TextBlock Text="{Binding HeaderText}" FontSize="22" FontWeight="SemiBold" />
            </Border>

            <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" />

            <Border Grid.Row="2" Background="#2D3748" CornerRadius="8" Padding="10" Margin="0,12,0,0">
                <TextBlock Text="{Binding ToastMessage}" Foreground="White"/>
            </Border>
        </Grid>
    </Grid>
</Window>
